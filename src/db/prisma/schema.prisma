generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// user
model User {
  id          String  @id       @default(uuid())
  username    String  @unique 
  email       String  @unique
  password    String

